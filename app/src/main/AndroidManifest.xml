<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.emetophobe.permissionviewer">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:name=".PermissionApp">

		<activity
			android:name=".ui.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.app_detail.AppDetailActivity"
			android:label="@string/title_app_info"
			android:parentActivityName=".ui.MainActivity">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity"/>
		</activity>


		<activity
			android:name=".ui.permission_detail.PermissionDetailActivity"
			android:label="@string/title_permission_info"
			android:parentActivityName=".ui.MainActivity">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity"/>
		</activity>

		<activity
			android:name=".ui.SettingsActivity"
			android:label="@string/title_settings"
			android:parentActivityName=".ui.MainActivity">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".ui.MainActivity"/>
		</activity>

	</application>

</manifest>